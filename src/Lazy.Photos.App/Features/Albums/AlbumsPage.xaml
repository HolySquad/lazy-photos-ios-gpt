<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Lazy.Photos.App"
             xmlns:albums="clr-namespace:Lazy.Photos.App.Features.Albums"
             x:Class="Lazy.Photos.App.Features.Albums.AlbumsPage"
             x:DataType="albums:AlbumsViewModel"
             Title="Albums">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Padding="16" ColumnDefinitions="Auto,*,Auto">
            <Button FontFamily="MaterialDesignIcons"
                    Text="{x:Static local:IconFont.Plus}"
                    FontSize="24"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray100}}"
                    Command="{Binding ShowCreateAlbumPopupCommand}" />
            <Label Grid.Column="1"
                   Text="Albums"
                   FontSize="24"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
        </Grid>

        <!-- Main Content -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <Grid>
                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                   IsVisible="{Binding IsLoading}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />

                <!-- Error Message -->
                <Label Text="{Binding ErrorMessage}"
                       IsVisible="{Binding ErrorMessage, Converter={StaticResource IsNotNullOrEmptyConverter}}"
                       TextColor="{StaticResource Magenta}"
                       FontSize="14"
                       HorizontalOptions="Center"
                       VerticalOptions="Start"
                       Margin="16" />

                <!-- Albums Collection -->
                <CollectionView ItemsSource="{Binding Albums}"
                                SelectionMode="None"
                                IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}">
                    <CollectionView.EmptyView>
                        <VerticalStackLayout VerticalOptions="Center"
                                             HorizontalOptions="Center"
                                             Spacing="16"
                                             Padding="32">
                            <Label FontFamily="MaterialDesignIcons"
                                   Text="{x:Static local:IconFont.FolderMultipleImage}"
                                   FontSize="64"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                   HorizontalOptions="Center" />
                            <Label Text="No albums yet"
                                   FontSize="18"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                                   HorizontalOptions="Center" />
                            <Label Text="Create an album to organize your photos"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                   HorizontalOptions="Center" />
                            <Button Text="Create Album"
                                    CornerRadius="8"
                                    Padding="24,12"
                                    Command="{Binding ShowCreateAlbumPopupCommand}"
                                    HorizontalOptions="Center"
                                    Margin="0,16,0,0" />
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical"
                                         Span="2"
                                         HorizontalItemSpacing="8"
                                         VerticalItemSpacing="8" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="albums:AlbumDisplayItem">
                            <Border Margin="8"
                                    StrokeShape="RoundRectangle 12"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray600}}"
                                    HeightRequest="180">
                                <Grid RowDefinitions="*,Auto">
                                    <!-- Cover Image / Placeholder -->
                                    <Grid BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}">
                                        <Label FontFamily="MaterialDesignIcons"
                                               Text="{x:Static local:IconFont.ImageMultiple}"
                                               FontSize="48"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray400}}"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               IsVisible="{Binding CoverThumbnail, Converter={StaticResource IsNullConverter}}" />
                                        <Image Source="{Binding CoverThumbnail}"
                                               Aspect="AspectFill"
                                               IsVisible="{Binding CoverThumbnail, Converter={StaticResource IsNotNullConverter}}" />
                                    </Grid>

                                    <!-- Album Info -->
                                    <Grid Grid.Row="1"
                                          Padding="12,8"
                                          BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}"
                                          ColumnDefinitions="*,Auto">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding Name}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   LineBreakMode="TailTruncation" />
                                            <Label Text="{Binding PhotoCount, StringFormat='{0} photos'}"
                                                   FontSize="12"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                        </VerticalStackLayout>

                                        <!-- Context Menu Button -->
                                        <Button Grid.Column="1"
                                                FontFamily="MaterialDesignIcons"
                                                Text="{x:Static local:IconFont.DotsVertical}"
                                                FontSize="20"
                                                TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                                                BackgroundColor="Transparent"
                                                Padding="4"
                                                VerticalOptions="Center">
                                            <FlyoutBase.ContextFlyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="Rename"
                                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type albums:AlbumsViewModel}}, Path=ShowEditAlbumPopupCommand}"
                                                                    CommandParameter="{Binding .}" />
                                                    <MenuFlyoutItem Text="Delete"
                                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type albums:AlbumsViewModel}}, Path=DeleteAlbumCommand}"
                                                                    CommandParameter="{Binding .}" />
                                                </MenuFlyout>
                                            </FlyoutBase.ContextFlyout>
                                        </Button>
                                    </Grid>

                                    <!-- Tap Gesture for Opening Album -->
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type albums:AlbumsViewModel}}, Path=OpenAlbumCommand}"
                                                              CommandParameter="{Binding .}" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </RefreshView>

        <!-- Edit/Create Album Popup Overlay -->
        <Grid Grid.RowSpan="2"
              IsVisible="{Binding IsEditPopupVisible}"
              BackgroundColor="#80000000">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CancelEditCommand}" />
            </Grid.GestureRecognizers>

            <Border StrokeShape="RoundRectangle 16"
                    Stroke="Transparent"
                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}"
                    Padding="24"
                    WidthRequest="300"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer />
                </Border.GestureRecognizers>

                <VerticalStackLayout Spacing="16">
                    <Label Text="{Binding EditPopupTitle}"
                           FontSize="20"
                           FontAttributes="Bold" />

                    <Entry Placeholder="Album name"
                           Text="{Binding EditingAlbumName}"
                           FontSize="16" />

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Button Text="Cancel"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray100}}"
                                CornerRadius="8"
                                Command="{Binding CancelEditCommand}" />
                        <Button Grid.Column="1"
                                Text="Save"
                                CornerRadius="8"
                                Command="{Binding SaveAlbumCommand}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>

</ContentPage>
