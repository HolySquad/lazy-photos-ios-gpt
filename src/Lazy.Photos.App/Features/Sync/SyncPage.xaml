<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Lazy.Photos.App.Features.Sync"
             xmlns:models="clr-namespace:Lazy.Photos.App.Features.Sync.Models"
             x:Class="Lazy.Photos.App.Features.Sync.SyncPage"
             x:DataType="local:SyncViewModel"
             Title="Sync">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">

            <!-- Sync Status Card -->
            <Frame BorderColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                   CornerRadius="8"
                   Padding="16"
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Sync Status"
                           FontSize="18"
                           FontAttributes="Bold" />

                    <Label Text="{Binding CurrentState.Status}"
                           FontSize="16"
                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />

                    <ProgressBar Progress="{Binding CurrentState.ProgressPercentage}"
                                 ProgressColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                 HeightRequest="8" />

                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Total" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                            <Label Text="{Binding CurrentState.TotalItems}" FontSize="16" FontAttributes="Bold" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Completed" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                            <Label Text="{Binding CurrentState.CompletedItems}" FontSize="16" FontAttributes="Bold" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2">
                            <Label Text="Failed" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                            <Label Text="{Binding CurrentState.FailedItems}" FontSize="16" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Grid>

                    <Label Text="{Binding CurrentState.CurrentItemName}"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"
                           IsVisible="{Binding CurrentState.CurrentItemName, Converter={StaticResource IsNotNullOrEmptyConverter}}" />

                    <Label Text="{Binding CurrentState.ErrorMessage}"
                           FontSize="12"
                           TextColor="{StaticResource Danger}"
                           IsVisible="{Binding CurrentState.ErrorMessage, Converter={StaticResource IsNotNullOrEmptyConverter}}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Control Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                <Button Grid.Column="0"
                        Text="Start"
                        Command="{Binding StartSyncCommand}"
                        BackgroundColor="{StaticResource Primary}" />
                <Button Grid.Column="1"
                        Text="Pause"
                        Command="{Binding PauseSyncCommand}"
                        BackgroundColor="{StaticResource Warning}" />
            </Grid>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                <Button Grid.Column="0"
                        Text="Resume"
                        Command="{Binding ResumeSyncCommand}"
                        BackgroundColor="{StaticResource Success}" />
                <Button Grid.Column="1"
                        Text="Cancel"
                        Command="{Binding CancelSyncCommand}"
                        BackgroundColor="{StaticResource Danger}" />
            </Grid>

            <!-- Queue Statistics -->
            <Frame BorderColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                   CornerRadius="8"
                   Padding="16"
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}"
                   IsVisible="{Binding QueueStats, Converter={StaticResource IsNotNullConverter}}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Upload Queue"
                           FontSize="18"
                           FontAttributes="Bold" />

                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="8">
                        <Label Grid.Row="0" Grid.Column="0" Text="Total:" FontSize="14" />
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding QueueStats.Total}" FontSize="14" FontAttributes="Bold" />

                        <Label Grid.Row="1" Grid.Column="0" Text="Pending:" FontSize="14" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding QueueStats.Pending}" FontSize="14" />

                        <Label Grid.Row="2" Grid.Column="0" Text="Uploading:" FontSize="14" />
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding QueueStats.Uploading}" FontSize="14" />

                        <Label Grid.Row="3" Grid.Column="0" Text="Completed:" FontSize="14" />
                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding QueueStats.Completed}" FontSize="14" TextColor="{StaticResource Success}" />

                        <Label Grid.Row="4" Grid.Column="0" Text="Failed:" FontSize="14" />
                        <Label Grid.Row="4" Grid.Column="1" Text="{Binding QueueStats.Failed}" FontSize="14" TextColor="{StaticResource Danger}" />
                    </Grid>

                    <Button Text="Clear Completed"
                            Command="{Binding ClearQueueCommand}"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray600}}" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
