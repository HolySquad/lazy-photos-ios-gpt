<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lazy.Photos.App.Features.SignIn.SignInPage"
             Title="Sign In"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*">
        <Grid Padding="16" ColumnDefinitions="Auto,*">
            <Button Text="&lt;"
                    BackgroundColor="Transparent"
                    TextColor="#222"
                    Command="{Binding GoBackCommand}" />
            <Label Grid.Column="1"
                   Text="Sign in"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#111"
                   VerticalTextAlignment="Center" />
        </Grid>

        <VerticalStackLayout Grid.Row="1"
                             Padding="20"
                             Spacing="14">
            <Label Text="Continue to Lazy Photos"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#111" />
            <Label Text="This is a mock sign-in. The real flow will be added later."
                   FontSize="14"
                   TextColor="#555" />

            <Entry Placeholder="Email"
                   Keyboard="Email"
                   Text="{Binding Email}" />
            <Entry Placeholder="Password"
                   IsPassword="True"
                   Text="{Binding Password}" />

            <Button Text="Continue"
                    BackgroundColor="#3F5A92"
                    TextColor="White"
                    CornerRadius="22"
                    HeightRequest="44"
                    Command="{Binding ContinueCommand}" />
        </VerticalStackLayout>
    </Grid>

</ContentPage>
