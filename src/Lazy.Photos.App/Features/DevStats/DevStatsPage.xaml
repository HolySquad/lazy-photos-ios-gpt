<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lazy.Photos.App.Features.DevStats.DevStatsPage"
             Title="DevStats">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Button Text="Refresh"
                    Command="{Binding RefreshCommand}" />
            <Button Text="Clear cache"
                    Command="{Binding ClearCommand}" />

            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="8" ColumnSpacing="12">
                <Label Text="Cache photos:" Grid.Row="0" Grid.Column="0" />
                <Label Text="{Binding CachedCount}" Grid.Row="0" Grid.Column="1" />

                <Label Text="Synced photos:" Grid.Row="1" Grid.Column="0" />
                <Label Text="{Binding SyncedCount}" Grid.Row="1" Grid.Column="1" />

                <Label Text="Device photos (sample):" Grid.Row="2" Grid.Column="0" />
                <Label Text="{Binding DeviceCount}" Grid.Row="2" Grid.Column="1" />

                <Label Text="DB size:" Grid.Row="3" Grid.Column="0" />
                <Label Text="{Binding DatabaseSize}" Grid.Row="3" Grid.Column="1" />

                <Label Text="Status:" Grid.Row="4" Grid.Column="0" />
                <Label Text="{Binding Status}" Grid.Row="4" Grid.Column="1" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
